<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/account_appbar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="top"
        android:background="?colorPrimaryDark"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/account_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleTextAppearance="@style/TextAppearance.Settings.Toolbar.Text"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:titleEnabled="false">

            <TextView
                android:id="@+id/account_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="16dp"
                android:text="@string/nav_login_or_register"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/account_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?colorPrimaryDark"
                app:layout_collapseMode="pin"
                app:menu="@menu/set_tool_bar_menu" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/account_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/account_rl_score"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:focusable="false"
                    android:text="@string/nav_my_score"
                    app:drawableStartCompat="@drawable/ic_score" />

                <TextView
                    android:id="@+id/account_tv_my_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    app:drawableEndCompat="@drawable/ic_arrow_right"
                    tools:ignore="RelativeOverlap"
                    tools:text="123" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_rl_start"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:text="@string/nav_my_collect"
                    app:drawableStartCompat="@drawable/ic_star_border" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_rl_todo"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:text="@string/nav_todo"
                    app:drawableStartCompat="@drawable/ic_todo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_rl_clear"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:text="@string/nav_clear_cache"
                    app:drawableStartCompat="@drawable/ic_clean" />

                <TextView
                    android:id="@+id/account_tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    tools:ignore="RelativeOverlap"
                    tools:text="3.12MB" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_rl_dark_mode"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:text="@string/nav_dark_mode"
                    app:drawableStartCompat="@drawable/ic_night" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/account_swc_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_rl_check_update"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:text="@string/nav_check_update"
                    app:drawableStartCompat="@drawable/ic_upgrade" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_rl_about_us"
                style="@style/setItemLayoutStyle"
                android:background="@drawable/bg_item_press_status"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/setItemTitleStyle"
                    android:text="@string/nav_about_us"
                    app:drawableStartCompat="@drawable/ic_share" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <TextView
                android:id="@+id/account_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_item_press_status"
                android:gravity="center"
                android:text="@string/nav_logout"
                android:textColor="@color/red_500"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>