<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_x_mini"
    android:background="?cardBackgroundColor"
    android:padding="@dimen/margin_x_mini">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_x_mini"
        android:text="@string/top"
        android:textColor="@color/red_700"
        android:textSize="@dimen/text_mini"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_newest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="@dimen/margin_x_mini"
        android:text="@string/newest"
        android:textColor="@color/red_700"
        android:textSize="@dimen/text_mini"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        app:layout_constraintStart_toEndOf="@id/tv_top"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_x_mini"
        android:textColor="@color/teal_500"
        android:textSize="@dimen/text_mini"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_newest"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        tools:ignore="RtlSymmetry"
        tools:text="公众号" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/text_mini"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2024-02-18 12:00:00" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_x_mini"
        android:ellipsize="end"
        android:minLines="1"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iv_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        tools:text="包体积优化｜裁剪resources.arsc和资源压缩自动化" />

    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/ic_more_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_goneMarginTop="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="@dimen/margin_x_mini"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/text_small"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_bookmark"
        tools:ignore="RtlSymmetry"
        tools:text="作者"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_super_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_x_mini"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/text_mini"
        app:layout_constraintBottom_toBottomOf="@id/iv_bookmark"
        app:layout_constraintStart_toEndOf="@id/tv_author"
        app:layout_constraintTop_toTopOf="@id/iv_bookmark"
        tools:ignore="RtlSymmetry"
        tools:text="广场自助" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/text_mini"
        app:layout_constraintBottom_toBottomOf="@id/iv_bookmark"
        app:layout_constraintStart_toEndOf="@id/tv_super_category"
        app:layout_constraintTop_toTopOf="@id/iv_bookmark"
        app:layout_goneMarginStart="0dp"
        tools:text="广场自助" />
</androidx.constraintlayout.widget.ConstraintLayout>