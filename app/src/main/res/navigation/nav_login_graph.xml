<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login_graph"
    app:startDestination="@id/nav_sign_in">
    <fragment
        android:id="@+id/nav_sign_in"
        android:name="com.maureen.wandevelop.feature.profile.ui.SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_to_register"
            app:destination="@id/nav_sign_up"
            app:popUpTo="@id/nav_sign_in"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/nav_sign_up"
        android:name="com.maureen.wandevelop.feature.profile.ui.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_to_login"
            app:destination="@id/nav_sign_in" />
    </fragment>
</navigation>